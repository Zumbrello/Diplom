<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Diplom.UserControls.puzzles">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Border x:Name="PuzzleBorder" BorderBrush="Black" BorderThickness="2" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Canvas x:Name="PuzzleCanvas" Background="LightGray"/>
        </Border>
        <Button Grid.Row="1" Content="Load Image" HorizontalAlignment="Center" Click="OnLoadImageClick"/>
    </Grid>
</UserControl>